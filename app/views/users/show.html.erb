<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
       <h1>User Info</h1>
        <!-- ユーザーの詳細 -->
        <div>
           <%= image_tag @user.get_profile_image("100x100") %>
           <h3><%= @user.name %></h3>
           <h3><%= @user.introduction %></h3>
             <% if @user == current_user %>
               <%= link_to edit_user_path(@user), class: "btn btn-danger" do %>
                <i class="fas fa-user-cog "></i>
             <% end %>
             <% end %>
        </div>
            <h1>New Book</h1>
             <% if @book.errors.any? %>
                  <%= @book.errors.count %>件のエラーが発生しました
                  <ul>
                  <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                  </ul>
              <% end %>
              <%= form_with model: @book, local:true do |f| %>
                <h4>title</h4>
                <%= f.text_field :title %>
                <h4>opinion</h4>
                <%= f.text_area :body %><br>
                <h4></h4>
                <%= f.submit "Create Book" %>
              <% end %>

               <% if @book.user == current_user %>
                <%= link_to "削除", book_path(@book), method: :delete %>
               <% end %>
      </div>
       <div class="col-md-8 offset-md-1">
         <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
             <tr>
              <th></th>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
               </tr>
          </thead>
          <tbody>
            <tr> <% @books.each do |book| %>
                 <%= link_to book_path(book.user_id) do %>
                  <td> <p><%= image_tag book.user.get_profile_image("100x100") %></p></td>
                 <% end %>
                  <td></td>
                  <td><p><%= link_to book.title,book_path(book.id)%></p></td>
                  <td><p><%= book.body %></p></td>
            </tr>
             <% end %>
        　 </tbody>
         </table>
       </div>

  </div>
 </div>
</div>