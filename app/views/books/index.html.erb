<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <h1>User info</h1>
<!-- ユーザーの詳細 -->
        <div>
             <table class="table">
                  <tr><%= image_tag @user.get_profile_image("100x100") %></tr>
                  <tr>
                    <td>name</td>
                    <td><%= @user.name %></td>
                  </tr>
                  <tr>
                    <td>introduction</td>
                    <td><%= @user.introduction%></td>
                  </tr>
             </table>
                  <%= link_to edit_user_path(@user), class: "btn btn-danger" do %>
                   <i class="fas fa-user-cog "></i>
                  <% end %>


        </div>
           <h2>New book</h2>
            <% if @book.errors.any? %>
            <%= @book.errors.count %>件のエラーが発生しました
             <ul>
            <% @book.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
             </ul>
            <% end %>

              <%= form_with model: @book,url: books_path, local:true do |f| %>
                <h4>title</h4>
                  <%= f.text_field :title %>
                <h4>opinion</h4>
                  <%= f.text_area :body %><br>
                  <%= f.submit "Create Book" , class: "btn btn-success" %>
              <% end %>
     </div>

     <div class="col-md-8 offset-md-1">
      <h2>Books</h2>
        <table class="table table-hover table-inverse">
          <thead>
             <tr>
              <th></th>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
               </tr>
          </thead>
          <tbody>
            <tr>
                <% @books.each do |book| %>
                <td> <%= link_to user_path(book.user_id) do %>
                     <%= image_tag book.user.get_profile_image("100x100") %>
                     <% end %>
                </td>
                  <td><%= link_to "#{book.title}",book_path(book.id) %></td>
                  <td><%= book.body %></td>
            </tr>
             <% end %>
         </tbody>
         </table>


    </div>
   </div>
 </div>





