<h1>User Info</h1>

<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image("100x100") %>
  <% if @user == current_user %>
      <p><%= link_to "プロフィール編集", edit_user_path(@user) %></p>
   <% end %>
</div>


<h1>New Book</h1>
<% if @book.errors.any? %>
  <%= @book.errors.count %>件のエラーが発生しました
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

  <%= form_with model: @book, local:true do |f| %>
    <h4>画像</h4>
      <%= f.file_field :image, accept: "image/*" %>
    <h4>title</h4>
      <%= f.text_field :title %>
    <h4>opinion</h4>
      <%= f.text_area :opinion %><br>
    <input type="submit" name="commit" value="Create Book" class="btn btn-success" data-disable-with="Create Book">
  <% end %>

<% @books.each do |book| %>
<div>
  <%= link_to books_path(book.id) do %>

  <% end %>
  <p>投稿ユーザー画像：<%= image_tag book.user.get_profile_image("100x100") %></p>
  <p>名前：<%= @books.name %></p>
  <p>自己紹介文：<%= @user.introduction %></p>
</div>
<% end %>