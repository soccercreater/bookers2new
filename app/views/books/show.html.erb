<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
       <h2>User Info</h2>
          <!-- ユーザーの詳細 -->
          <div>

             <table class="table">
                 <tr> <%= image_tag @book.user.get_profile_image("100x100") %></tr>
                 <tr>
                     <th>neme</th>
                     <th><%= @book.user.name %></th>
                </tr>
　　　　　　　　 <tr>
                     <th>introduction</th>
                     <th><%= @book.user.introduction %></th>
                </tr>
             </table>
                <% if @book.user == current_user %>
                    <p><%= link_to "プロフィール編集", edit_user_path(current_user) %></p>
                 <% end %>
          </div>
              <h2>New Book</h2>
               <%= form_with model: @new_book, local:true do |f| %>
                  <h4>title</h4>
                    <%= f.text_field :title %>
                  <h4>body</h4>
                    <%= f.text_area :body %><br>
                  <h4></h4>
                  <%= f.submit "Create Book" %>
                <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
              <h2>Book detail</h2>
               <table class="table table-hover table-inverse">
               <tbody>
                <tr>
                <td><p><%= image_tag @book.user.get_profile_image("100x100") %></p> </td>
                <td><p><%= link_to "#{@book.title}",book_path(@book.id) %></p></td>
                <td> <p><%= @book.body %></p></td>
                <td><%= link_to 'edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
                <td> <%= link_to "destroy",book_path(@book.id), class: "btn btn-sm btn-danger destroy_book_#{@book.id}", data: {confirm: "削除しますか？"} %></td>
                </td>
                </tr>
              </tbody>
             </table>
           </div>

      </div>
     </div>
    </div>

