<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
       <h2>User info</h2>
          <!-- ユーザーの詳細 -->
          <div>

             <table class="table">
                 <tr> <%= image_tag @book.user.get_profile_image("100x100") %></tr>
                 <tr>
                     <th>name</th>
                     <th><%= @book.user.name %></th>
                </tr>
                <tr>
                     <th>introduction</th>
                     <th><%= @book.user.introduction %></th>
                </tr>
             </table>

                     <%= link_to edit_user_path(@book.user), class: "btn btn-outline-secondary btn-block" do %>
                   <i class="fas fa-user-cog "></i>
                 <% end %>

          </div>
              <h2>New book</h2>
               <%= form_with model: @new_book, local:true do |f| %>
                  <h4>Title</h4>
                    <%= f.text_field :title %>
                  <h4>Opinion</h4>
                    <%= f.text_area :body %><br>
                  <h4></h4>
                  <%= f.submit "Create Book" , class: "btn btn-success" %>

                <% end %>
      </div>
      <div class="col-md-8 offset-md-1">
              <h2>Book detail</h2>
               <table class="table table-hover table-inverse">
               <tbody>
                <tr>
                <td><p><%= image_tag @book.user.get_profile_image("100x100") %></p>
                      <br><%=link_to "#{@book.user.name}",user_path(@book.user_id)%></td>
                <td><p><%= link_to "#{@book.title}",book_path(@book.id) %></p></td>
                <td> <p><%= @book.body %></p></td>
                  <% if @book.user == current_user %>
                <td><%= link_to 'Edit', edit_book_path(@book), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
                  <% end %>
                  <% if @book.user == current_user %>
                <td> <%= link_to "Destroy",book_path(@book.id), class: "btn btn-sm btn-danger destroy_book_#{@book.id}", method: :delete,data: {confirm: "削除しますか？"} %></td>
                  <% end %>
                </td>
                </tr>
              </tbody>
             </table>
           </div>

      </div>
     </div>
    </div>
<div class="container mt-5">
    <div class="row">
      <div class="mx-auto">
        <p>CopyRight Infratop.inc</p>
      </div>
    </div>
  </div>
