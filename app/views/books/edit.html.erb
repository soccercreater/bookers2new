<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  		<h1>Editing Book</h1>


  		        <% if @book.errors.any? %>
                  <%= @book.errors.count %>件のerrorが発生しました
                  <ul>
                  <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                  <% end %>
                  </ul>
              <% end %>
        <%= form_with model: @book, url: book_path(@book.id), method: :patch, local: true do |f| %>
            <h4>title</h4>
              <%= f.text_field :title %>
            <h4>opinion</h4>
              <%= f.text_area :body %><br>
            <h4></h4>
            <input type="submit"  value="Update Book" class="btn btn-success" data-disable-with="Update Book"><br><br>

              <%= link_to "Show", book_path(@book.id), method: :get %>
              <span>|</span>
              <%= link_to "Back", books_path %>
         <% end %>
   </div>
 </div>
</div>

